---
const team = [
  {
    name: 'Dra. María González',
    role: 'Veterinaria Principal',
    image: 'https://images.unsplash.com/photo-1559839734-2b71ea197ec2?auto=format&fit=crop&q=80&w=400',
    specialty: 'Cirugía General'
  },
  {
    name: 'Dr. Carlos Ruiz',
    role: 'Veterinario Senior',
    image: 'https://images.unsplash.com/photo-1612349317150-e413f6a5b16d?auto=format&fit=crop&q=80&w=400',
    specialty: 'Medicina Interna'
  },
  {
    name: 'Dra. Ana Martínez',
    role: 'Veterinaria',
    image: 'https://images.unsplash.com/photo-1622253692010-333f2da6031d?auto=format&fit=crop&q=80&w=400',
    specialty: 'Dermatología'
  }
];
---

<section id="equipo" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Nuestro Equipo</h2>
      <p class="mt-4 text-gray-600">Profesionales comprometidos con el bienestar de tu mascota</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {team.map(member => (
        <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow">
          <img 
            src={member.image} 
            alt={member.name}
            class="w-full h-64 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900">{member.name}</h3>
            <p class="text-primary-600 font-medium">{member.role}</p>
            <p class="text-gray-600 mt-2">{member.specialty}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>