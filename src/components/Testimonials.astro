---
const testimonials = [
  {
    name: 'Laura Pérez',
    text: 'Excelente atención y profesionalismo. Mi perro Max siempre recibe el mejor cuidado.',
    pet: 'Max - Labrador',
    image: 'https://images.unsplash.com/photo-1517849845537-4d257902454a?auto=format&fit=crop&q=80&w=300'
  },
  {
    name: 'Juan Martínez',
    text: 'El equipo veterinario es increíble. Muy agradecido por el cuidado de mi gata Luna.',
    pet: 'Luna - Siamés',
    image: 'https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?auto=format&fit=crop&q=80&w=300'
  },
  {
    name: 'Carmen Rodríguez',
    text: 'Servicio de primera calidad. Siempre atentos y profesionales con mi mascota.',
    pet: 'Rocky - Golden Retriever',
    image: 'https://images.unsplash.com/photo-1552053831-71594a27632d?auto=format&fit=crop&q=80&w=300'
  }
];
---

<section id="testimonios" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Testimonios</h2>
      <p class="mt-4 text-gray-600">Lo que dicen nuestros clientes sobre nosotros</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map(testimonial => (
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
          <div class="flex items-center gap-4 mb-4">
            <img 
              src={testimonial.image} 
              alt={testimonial.name}
              class="w-16 h-16 rounded-full object-cover"
            />
            <div>
              <h3 class="font-semibold text-gray-900">{testimonial.name}</h3>
              <p class="text-primary-600">{testimonial.pet}</p>
            </div>
          </div>
          <p class="text-gray-600 italic">"{testimonial.text}"</p>
        </div>
      ))}
    </div>
  </div>
</section>